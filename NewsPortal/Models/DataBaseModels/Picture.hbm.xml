<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="NewsPortal.Models.DataBaseModels" assembly="NewsPortal">

  <class name="Picture" table="Pictures">
    <id name="Id">
      <column name="Id" sql-type="int" not-null="true"/>
      <generator class="native" />
    </id>
    <property name="Name">
      <column name="Name" sql-type="nvarchar(20)" not-null="true"/>
    </property>
    <property name="Image">
      <column name="Image" sql-type="image" not-null="true"/>
    </property>
  </class>

</hibernate-mapping>