<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="NewsPortal.Models.DataBaseModels" assembly="NewsPortal">

  <class name="NewsItem" table="NewsItems">
    <id name="Id">
      <column name="Id" sql-type="int" not-null="true"/>
      <generator class="native" />
    </id>
    <property name="UserId">
      <column name="UserId" sql-type="int" not-null="true"/>
    </property>
    <property name="Title">
      <column name="Title" sql-type="nvarchar(100)" not-null="true"/>
    </property>
    <property name="Content">
      <column name="Content" sql-type="nvarchar(100)" not-null="true"/>
    </property>
    <property name="CreationDate">
      <column name="CreationDate" sql-type="datetime" not-null="true"/>
    </property>
    <property name="PictureId">
      <column name="PictureId" sql-type="int" not-null="true"/>
    </property>
    <many-to-one name="User" class="User" column="UserId" cascade="save-update"/>
  </class>

</hibernate-mapping>