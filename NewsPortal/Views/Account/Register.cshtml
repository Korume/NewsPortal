@model NewsPortal.Models.ViewModels.RegisterViewModel

@section StyleSheet{
    <link rel="stylesheet" href="~/Content/StyleSheet_ServicePages.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
}

<section class="Section-Registration">
    <div class="title-head">
        <span>
            Регистрация
        </span>
    </div>
    <div class="form-reg">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "registration-form" }))
        {
            @Html.ValidationSummary("")
            @Html.EditorForModel()
            <input type="submit" value="Регистрация" />
        }
    </div>
</section>